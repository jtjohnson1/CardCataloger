# Docker Environment Configuration for CardCataloger

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DB_NAME=CardCataloger
DATABASE_URL=mongodb://admin:password@mongodb:27017/CardCataloger?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-environment
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-this-in-production-environment

# eBay API Configuration (Optional - for price comparisons)
EBAY_APP_ID=
EBAY_CERT_ID=
EBAY_DEV_ID=
EBAY_USER_TOKEN=
EBAY_SANDBOX=true

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_HOST=0.0.0.0
OLLAMA_ORIGINS=*

# Application Configuration
NODE_ENV=production
PORT=3000

# GPU Configuration
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility