# Environment variables for Docker deployment

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DB_NAME=CardCataloger
DATABASE_URL=mongodb://admin:password123@mongodb:27017/CardCataloger?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-this-too

# eBay API Configuration
EBAY_APP_ID=your_real_ebay_app_id # INPUT_REQUIRED {Your real eBay App ID for production use}
EBAY_CERT_ID=your_real_ebay_cert_id # INPUT_REQUIRED {Your real eBay Certificate ID for production use}
EBAY_DEV_ID=your_real_ebay_dev_id # INPUT_REQUIRED {Your real eBay Developer ID for production use}
EBAY_USER_TOKEN=your_real_ebay_user_token # INPUT_REQUIRED {Your real eBay User Token for production use}
EBAY_SANDBOX=false

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llava:latest
OLLAMA_CONTEXT_LENGTH=4096

# Application Configuration
NODE_ENV=production
PORT=3000
DOCKER_CONTAINER=true

# NVIDIA GPU Configuration
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility